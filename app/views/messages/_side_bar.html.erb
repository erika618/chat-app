<div class="side-bar-header">
  <div class = "user-name">
    <%= link_to current_user.name, edit_user_path(current_user)%>
  </div>
  <div class = "chat-create">
    <%= link_to "チャットを作成する", new_room_path %>
  </div>
</div>

<div class="rooms">
  <% current_user.rooms.each do |room| %>
  <%# 「チャットルーム名を表示する」という処理を繰り返し実行.。「|room|」の部分は変数名（命名規則はない） %>
    <div class="room">
      <div class="room-name">
        <%= link_to room.name, room_messages_path(room) %>
        <%# room.nameの「name」は、roomsテーブルのカラム名。パスにルームを引数とすることでメッセージと紐づいているチャットルームのidを持たせることができる。 %>
      </div>
    </div>
  <% end %>
  
  <div class="room">
    <div class="room-name">
      <a href="#">techroom2</a>
    </div>
  </div>
</div>